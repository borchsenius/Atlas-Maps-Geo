<%= form_for @geo_object, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publish_year, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :publish_year, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :geo_lat, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :geo_lat, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :geo_lng, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :geo_lng, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :path_to_image, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :path_to_image, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :path_to_cop, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :path_to_cop, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                geo_objects_path, :class => 'btn' %>
  </div>
<% end %>
